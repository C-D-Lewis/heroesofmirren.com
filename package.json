{
  "name": "heroesofmirren.com",
  "version": "1.0.0",
  "description": "yo yo yo let me tell you something real quick",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:story": "node ./scripts/build-story-index.js",
    "build": "npm run build:story && npm run build:site",
    "build:site": "npm run clean && webpack --mode production",
    "build:site:dev": "npm run clean && webpack --mode development",
    "start": "npm run build:site && npm run build:site:dev && http-server"
  },
  "author": "Chris Lewis",
  "license": "MIT",
  "dependencies": {
    "fabricate.js": "^3.5.0"
  },
  "devDependencies": {
    "@chris-lewis/eslint-config": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "http-server": "^14.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "extends": [
      "@chris-lewis/eslint-config",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "rules": {
      "import/extensions": 0,
      "no-param-reassign": 0
    },
    "globals": {
      "StoryPages": "readonly"
    }
  }
}
